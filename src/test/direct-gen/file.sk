/** Just here for readability */
UnificationResult error(Type[MAX_NUM_VARS] context) {
    return new UnificationResult(type=new Error(), context=context);
}

boolean isError(Type t) {
    switch (ty) {
        case Variable:{}
        case Function:{}
        case Node:{}
        case Error:{ return true; }
    }
    return false;
}

UnificationResult unify(Type a, Type b, Type[MAX_NUM_VARS] context) {
    switch(a){
        case Variable:{
            switch(b){
                case Variable:{ // Unwrap b if possible
                    if (context[b.id] != null) { return unify(a, context[b.id], context); }
                    return unifyVar(a, b, context);
                }
                case Function:{ return unifyVar(a, b, context); }
                case Node:{ return unifyVar(a, b, context); }
                case Error:{ return error(context); }
            }
        }
        case Function:{
            switch(b){
                case Variable:{ return unifyVar(b, a, context); }
                case Function:{
                    UnificationResult in = unify(a.in, b.in, context);
                    if (isError(in)) return error(in.context)
                    UnificationResult out = unify(a.out, b.out, in.context);
                    if (isError(out)) return error(out.context)
                    return new UnificationREsult(type = new Function(in = in.type, out = out.type), context = out.context)
                }
                case Node:{ return error(context); }
                case Error:{ return error(context); }
            }
        }
        case Node:{
            switch(b){
                case Variable:{ return unifyVar(b, a, context); }
                case Function:{ return error(context); }
                case Node:{
                    if (a.label != b.label) return error(context);
                    if (a.params.sz != b.params.sz) return error(context);

                    // TODO fixme ===================================================================================
                    for (int i = 0; i < a.params.sz; i++) {
                        UnificationResult unifyChild = unify(a.params.inner.val[i], b.params.inner.val[i], context);
                        Type ty = unifyChild.type;
                        if (isError(ty)) return error(context);

                        // ...

                    }
                    // TODO we actually have to make a new type containing all the results of unifying the children
                    return new UnificationResult(type=a, context=context);
                }
                case Error:{ return error(context); }
            }
        }
        case Error:{ return error(context); }
    }
}

UnificationResult resolve(Type ty, Type[MAX_NUM_VARS] context) {
    switch (ty) {
        case Variable: {
            // alpha should never mention itself
            return resolve(context[ty.id], context);
        }
        case Function: {
            UnificationResult resolveIn = resolve(ty.in, context);
            UnificationResult resolveOut = resolve(ty.out, resolveIn.context);
            Type fn = new Function(in=resolveIn.type, out=resolveOut.type);
            return new UnificationResult(type=fn, context=resolveOut.context);
            // TODO check I did the following: resolve both in and out and return new function with them
            // resolve out using the var map from resolving in.
        }
        case Node: {
            // TODO
//            int label; Array<Type> params;
        }
        case Error: { }
    }
    return null; // TODO removeme
}

UnificationResult apply(Type a, Type b, Type[MAX_NUM_VARS] context) {
    switch(a){
        case Function:{
            UnificationResult app = unify(a.in, b, context);
            return resolve(app.type, context);
        }
        case Variable:{ return error(context); }
        case Node:{ return error(context); }
        case Error:{ return error(context); }
    }
}

